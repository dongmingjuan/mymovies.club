<div class="col-md-4 col-md-offset-4">
                  <h2>Create A Movie </h2>
                  <hr>
                  <%= simple_form_for @movie do |f| %>
                   <%= f.input :title %>
                   <%= f.input :description %>
                   <%= f.input :image, as: :file %>
                   <%= f.submit "Submit", class: "btn btn-sm btn-primary" %>
                  <% end %>

</div>
